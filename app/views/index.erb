<h1>Welcome to $pitter~~~$$$$$$</h1>
<p>Please login or create a new user</p>

<%= @login_error %>
<form action="/login" method="post">

  <input type="text" name="email" placeholder="email">

  <input type="text" name="password" placeholder="password">

  <input type="submit" value="Login!">

</form>

<a href="/users/new">Create A New User</a>

<% @spits.each do |spit| %>
  <p><a href="/users/<%= spit.user_id %>"><%= spit.username %></a></p>
  <p><%= spit.created_at %></p>
  <p><a href="/spits/<%= spit.id %>"><%= spit.content %></a></p>
<% end %>
